<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.education.rajneesh.jrec.MainActivity">


    <LinearLayout
        android:id="@+id/tally1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/shape3"
        android:elevation="4dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F3F3F3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="18dp"
                android:background="#F3F3F3"
                android:fontFamily="sans-serif-condensed"




                android:onClick="historyclick"
                android:padding="4dp"
                android:text="Tally"
                android:textAllCaps="true"
                android:textColor="#04ABB6"
                android:textSize="25sp"

                android:textStyle="bold" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tally"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F3F3"

                android:textColor="#6B6B6B"
                android:textSize="20sp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="8dp"
                android:text="A complete course on Tally ERP 9 Accounting and Inventory Software. Certificate from (CSE) e-Governance Services India Limited. Login ID is given to each student for accessing Tally (e-Learning) Contnts on CSC Portal. Online Exam on CSC Portal. "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="18dp"
                android:background="#F3F3F3"
                android:fontFamily="sans-serif-condensed"




                android:onClick="historyclick"
                android:padding="4dp"
                android:text="free"
                android:textAllCaps="true"
                android:textColor="#04ABB6"
                android:textSize="25sp"

                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F3F3"

                android:textColor="#6B6B6B"
                android:textSize="20sp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="8dp"
                android:text="Advance Accounting and Tally ERP9 : Rs. 8350\nTally ERP9 : Rs.5850"
                />
        </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>

