<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.education.rajneesh.jrec.MainActivity">


    <LinearLayout
        android:id="@+id/hards1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#F3F3F3"
        android:elevation="4dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F3F3F3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="18dp"
                android:background="#F3F3F3"
                android:fontFamily="sans-serif-condensed"




                android:onClick="historyclick"
                android:padding="4dp"
                android:text="hardware networking"
                android:textAllCaps="true"
                android:textColor="#04ABB6"
                android:textSize="25sp"

                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F3F3"

                android:textColor="#6B6B6B"
                android:textSize="20sp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="8dp"
                android:text="Hardware and Networking is considered as one of the best careers in the field of IT. It refers to the process of supplying data and information by linking the group of networks using hardware such as switches, hubs, gateways, access points, network interface cards, networking cables etc. Major companies like Cisco, Juniper are considered as the top vendors in the field of networking. In terms of growth and opportunities, the 21st century is termed as the “century of technology” and JREC Computers is determined to stay at the forefront of such initiative. "
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="18dp"
                android:background="#F3F3F3"
                android:fontFamily="sans-serif-condensed"




                android:onClick="historyclick"
                android:padding="4dp"
                android:text="fees"
                android:textAllCaps="true"
                android:textColor="#04ABB6"
                android:textSize="25sp"

                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F3F3"

                android:textColor="#6B6B6B"
                android:textSize="20sp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="8dp"
                android:text="Rs. 9999"
                />

        </LinearLayout>

</ScrollView>
    </LinearLayout>

</RelativeLayout>

