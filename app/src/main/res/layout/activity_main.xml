                        android:onClick="aboutexpand"
                        android:padding="4dp"
                        android:text="click here"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

